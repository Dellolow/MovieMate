<%- include('../partials/header.ejs') %>
<div class="movies-container">
  <h2>Watched Movies</h2>
  <ul>
    <% movies.filter(movie => movie.watched).forEach(movie => { %>
      <li>
        <strong><%= movie.title %></strong> (<%= movie.releaseYear %>) - <%= movie.genre %>
        <a href="/movies/<%= movie._id %>/edit">Edit</a>
        <form action="/movies/<%= movie._id %>?_method=DELETE" method="POST" style="display:inline;">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% }) %>
  </ul>
  
  <h2>Unwatched Movies</h2>
  <ul>
    <% movies.filter(movie => !movie.watched).forEach(movie => { %>
      <li>
        <strong><%= movie.title %></strong> (<%= movie.releaseYear %>) - <%= movie.genre %>
        <a href="/movies/<%= movie._id %>/edit">Edit</a>
        <form action="/movies/<%= movie._id %>?_method=DELETE" method="POST" style="display:inline;">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% }) %>
  </ul>
</div>
