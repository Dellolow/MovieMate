<%- include('../partials/header.ejs') %>
<div class="movie-index">
<div class="movie-container">
  <h2>Watched Movies</h2>
    <% movies.filter(movie => movie.watched).forEach(movie => { %>
      <article>
        <strong><%= movie.title %></strong> (<%= movie.releaseYear %>) - <%= movie.genre %>
        <a href="/movies/<%= movie._id %>/edit">Edit</a>
        <form action="/movies/<%= movie._id %>?_method=DELETE" method="POST">
            <button type="submit">Delete</button>
        </form>
      </article>
    <% }) %>
</div>
<div class="movie-container">
<h2>Unwatched Movies</h2>
      <% movies.filter(movie => !movie.watched).forEach(movie => { %>
        <article>
            <strong><%= movie.title %></strong> (<%= movie.releaseYear %>) - <%= movie.genre %>
            <a href="/movies/<%= movie._id %>/edit">Edit</a>
            <form action="/movies/<%= movie._id %>?_method=DELETE" method="POST">
                <button type="submit">Delete</button>
            </form>
        </article>
      <% }) %>
</div>
</div>
<%- include('../partials/footer.ejs') %>
